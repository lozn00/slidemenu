<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.qssq666.slidemenu.VerticalLPager
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff00"
            android:orientation="horizontal"
            android:tag="first">

            <TextView
                style="@style/text_size_bg_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="VerticalLPager第一层" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="second">

            <ImageView
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:background="@drawable/girl1"
                android:tag="最底層view">

                /></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="我是VerticalLPager第二层"
                android:textColor="@android:color/white" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_horzontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginBottom="30dp"

                android:layout_marginLeft="150dp"
                android:layout_marginTop="30dp"
                android:background="#ffffff"
                android:tag="recyclerview">


            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="30dp"

                android:layout_marginTop="30dp"
                android:background="#ffffff"
                android:tag="recyclerview">


            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_vertical_top"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="60dp"

                android:layout_marginTop="30dp"
                android:background="#ffffff"
                android:tag="recyclerview">


            </android.support.v7.widget.RecyclerView>

        </FrameLayout>

    </cn.qssq666.slidemenu.VerticalLPager>
</FrameLayout>